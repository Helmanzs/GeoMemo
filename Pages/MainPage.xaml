<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoMemo.MainPage">


    <VerticalStackLayout Padding="24" Spacing="12">

        <Label Text="{Binding Status}"
               FontSize="18"
               FontAttributes="Bold" />

        <Label Text="{Binding Latitude, StringFormat='Latitude: {0:F6}'}"
               IsVisible="{Binding Latitude}" />

        <Label Text="{Binding Longitude, StringFormat='Longitude: {0:F6}'}"
               IsVisible="{Binding Longitude}" />

        <Label Text="{Binding Accuracy, StringFormat='Přesnost: {0:F0} m'}"
               IsVisible="{Binding Accuracy}" />

    </VerticalStackLayout>



</ContentPage>
