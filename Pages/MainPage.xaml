<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoMemo.MainPage">

    <CollectionView ItemsSource="{Binding Obce}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="8" Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Nazev}"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <Label Text="{Binding Okres}"
                               FontSize="14"
                               TextColor="Gray"/>

                        <Label Text="{Binding Kraj}"
                               FontSize="13"
                               TextColor="DarkGray"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
