<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:GeoMemo.ViewModels"
    x:Class="GeoMemo.AddGeoVzpominkaPage"
    Title="Nová vzpomínka">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Vyber obec:" FontAttributes="Bold"/>
            <Label Text="{Binding CurrentObec}" FontAttributes="Italic" TextColor="Gray"/>
            <Picker ItemsSource="{Binding Obce}" ItemDisplayBinding="{Binding Nazev}" SelectedItem="{Binding SelectedObec}" />

            <Label Text="Hodnocení (1–5):" FontAttributes="Bold"/>
            <Slider Minimum="1" Maximum="5" Value="{Binding Hodnoceni}"/>
            <Label Text="{Binding Hodnoceni}" HorizontalOptions="Center"/>

            <Label Text="Popis:" FontAttributes="Bold"/>
            <Editor Text="{Binding Popis}" HeightRequest="100"/>

            <Button Text="Vybrat fotku" Command="{Binding SelectImageCommand}" />
            <Image Source="{Binding ImageSource}" HeightRequest="200" />

            <Button Text="Uložit vzpomínku" Command="{Binding SaveCommand}" BackgroundColor="DodgerBlue" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
